<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:orientation="horizontal" android:paddingTop="5px"
	android:gravity="right" android:paddingRight="10px">
	<!--
		android:paddingTop="7px" android:paddingBottom="7px"
		android:paddingLeft="7px" android:paddingRight="10px"
	-->
	<LinearLayout android:layout_height="wrap_content"
		android:layout_weight="1" android:layout_marginRight="1dp"
		android:layout_width="wrap_content" android:orientation="vertical">
		<TextView android:id="@+id/txvName" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:paddingBottom="2px"
			android:textColor="@android:color/black" android:gravity="center"
			android:textSize="10dip" android:text="11">
		</TextView>
	</LinearLayout>
	<TextView android:layout_width="wrap_content" android:gravity="center"
		android:background="@drawable/chatbgb" android:textSize="20dip"
		android:id="@+id/txvInfo" android:layout_weight="2"
		android:layout_height="wrap_content" android:textColor="@android:color/black"></TextView>



</LinearLayout>
